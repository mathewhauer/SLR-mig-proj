  author = {Vecchi, Gabriel A. and Soden, Brian J.},
  month = sep,
  year = {2007},
  keywords = {CLIMATE change,GLOBAL temperature changes,GLOBAL warming,GREENHOUSE gases,INDIAN Ocean,OCEAN circulation,OCEANOGRAPHY,TEMPERATURE,TEMPERATURE measurements,WATER levels},
  pages = {4316-4340},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\RARRW6Y4\\Vecchi_Soden_2007_Global Warming and the Weakening of the Tropical Circulation.pdf}
