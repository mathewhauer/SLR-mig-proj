  doi = {10.1098/rsta.2010.0291},
  author = {{Nicholls Robert J.} and {Marinova Natasha} and {Lowe Jason A.} and {Brown Sally} and {Vellinga Pier} and {de Gusm{\~a}o Diogo} and {Hinkel Jochen} and {Tol Richard S. J.}},
  month = jan,
