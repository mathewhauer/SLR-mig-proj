  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\WGXGX4Y4\\Moser_Hart_2015_The long arm of climate change.pdf}
}

@article{hamiltonClimigrationPopulationClimate2016,
  title = {Climigration? {{Population}} and Climate Change in {{Arctic Alaska}}},
