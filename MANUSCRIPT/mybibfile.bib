  keywords = {Crassostrea virginica,Shoreline erosion,Soft stabilization,Spartina alterniflora,Wave attenuation,Wave tank},
  pages = {1-11},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\F5HMVQSQ\\Manis et al_2015_Wave attenuation experiments over living shorelines over time.pdf}
