  pages = {63-83},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\3E7VL5XW\\Harvatt et al_2011_Understanding householder responses to natural hazards.pdf;C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\YKAVKN2X\\13669877.2010.html}
