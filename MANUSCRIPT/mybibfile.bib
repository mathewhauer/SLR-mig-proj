  author = {Hardy, R. Dean and Hauer, Mathew E.},
  month = feb,
  year = {2018},
  keywords = {Climate change,Sea-level rise,Demographic metabolism,Georgia,Risk assessment,Social vulnerability},
  pages = {10-20},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\3VJ34T9L\\S0143622817309189.html}
