  month = feb,
  year = {2013},
  keywords = {Sea level rise,Flooding,Behavioural economics,Damage mitigation,Flood risk management,Risk and uncertainty,The Netherlands},
  pages = {229-244},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\BVWR3YVZ\\Botzen et al_2013_Individual preferences for reducing flood risk to near zero through elevation.pdf}
