  month = dec,
  year = {2017},
  keywords = {migration,Maldives,climate change impacts,islanders,quantitative survey,risk management},
  pages = {370-385},
  file = {C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\ELV7W8VM\\Stojanov et al_2017_Local perceptions of climate change impacts and migration patterns in Malé,.pdf;C:\\Users\\mhauer\\OneDrive - Florida State University\\MANUSCRIPTS\\zotero\\zotero-systsem\\storage\\I6IBTLKM\\geoj.html}
